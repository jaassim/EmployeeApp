@page
@model EmployeeApp.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-4 text-center text-danger">Delete Employee</h1>

<h3 class="text-center text-warning">Are you sure you want to delete this?</h3>
<div class="text-center">
    <h4 class="text-muted">Employee Details</h4>
    <hr />
    <dl class="row justify-content-center">
        <dt class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Employee.Designation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Designation)
        </dd>
    </dl>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Employee.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>

<style>
    h1 {
        color: #dc3545;
    }

    h3 {
        color: #ffc107;
    }

    .text-muted {
        color: #6c757d !important;
    }

    dt {
        color: #343a40;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            border-color: #4e555b;
        }
</style>
