@page
@model EmployeeApp.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h1 class="my-4 text-center text-primary">Delete Employee</h1>

<h3 class="text-center text-danger">Please confirm employee details: You are about to permanently delete this.</h3>

<div class="text-center">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="my-0">Employee Details</h4>
        </div>
        <div class="card-body">
            <dl class="row justify-content-center">
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Employee.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Employee.Name)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fas fa-briefcase"></i> @Html.DisplayNameFor(model => model.Employee.Designation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Employee.Designation)
                </dd>
            </dl>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Employee.Id" />
                <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-secondary ml-2">No Go Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    h1 {
        color: #dc3545;
    }

    h3 {
        color: #ffc107;
    }

    .card-header {
        background-color: #dc3545;
        color: white;
    }

    dt {
        display: flex;
        align-items: center;
        color: #343a40;
        margin-bottom: 5px;
    }

        dt i {
            margin-right: 10px;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            border-color: #4e555b;
        }
</style>